<!DOCTYPE html>
<html lang='en'>
<head>
  <%- include( 'partials/head', {
    pageTitle: 'Zeitgeber Store - Admin View',
    stylesFilename: 'admin'
  }) %>
</head>
<body>
  <header class="header">
    <%- include( '../components/logo', {
      ref: '/admin/main',
      src: '/img/t4p-dark.svg',
      alt: 'Tech4People'
    }) %>

    <%- include( '../components/menu', {
      elements: [
        { ref: '/admin/logout', content: 'Logout' }
      ]
    }) %>
  </header>
  <article>
    <h1 class='admin__title'>Card</h1>
    <form id='card' method="post">
      <div class='admin__item admin__item--maximized'>
        <h3 class='admin__label'>Intro</h3>
        <%- include( '../components/input', { type: 'text', name: 'card_title', placeholder: '', iconClass: 'far fa-file-alt', value: 'Something' } ) %>
      </div>
      <div class='admin__item admin__item--maximized'>
        <h3 class='admin__label'>Image</h3>
        <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill', content: '<img class="image__button" src="/img/hero.jpg">' } ) %>
      </div>
      <%- include( '../components/button', { id: '', type: 'submit', content: 'Save<i class="fas fa-save icon"></i>', extraClasses: '', extraLinkClasses: '' } ) %>
    </form>
  </article>
  <article>
    <h1 class='admin__title'>Purchase</h1>
    <form id='purchase' method="post">
      <div class='admin__item admin__item--maximized'>
        <h3 class='admin__label'>Title</h3>
        <%- include( '../components/input', { type: 'text', name: 'purchase_title', placeholder: '', iconClass: 'far fa-file-alt', value: 'Something' } ) %>
      </div>
      <div class='admin__item admin__item--maximized'>
        <h3 class='admin__label'>Description</h3>
        <%- include( '../components/textarea', { name: 'purchase_content', cols: '50', rows: '30', placeholder: '', value: 'Something else', extraClasses: '' } ) %>
      </div>
      <div class='admin__item admin__item--maximized'>
        <h3 class='admin__label'>Images</h3>
        <div class='admin__wrapper'>
          <div class='admin__item'>
            <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill', content: '<img class="image__button" src="/img/hero.jpg">' } ) %>
          </div>
          <div class='admin__item'>
            <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill', content: '<img class="image__button" src="/img/hero.jpg">' } ) %>
          </div>
          <div class='admin__item'>
            <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill', content: '<img class="image__button" src="/img/hero.jpg">' } ) %>
          </div>
          <div class='admin__item'>
            <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill', content: '<img class="image__button" src="/img/hero.jpg">' } ) %>
          </div>
          <div class='admin__item admin__item--dark'>
            <%- include( '../components/link', { id: 'purchase_add', ref: '', extraClasses: 'link--nofill link--maximized link--centered', content: '<i class="far fa-plus-square admin__add"></i>' } ) %>
          </div>
        </div>
      </div>
      <%- include( '../components/button', { id: '', type: 'submit', content: 'Save<i class="fas fa-save icon"></i>', extraClasses: '', extraLinkClasses: '' } ) %>
    </form>
  </article>
  <article>
    <h1 class='admin__title'>Product</h1>
    <form id='product' method="post">
      <div class='admin__item admin__item--maximized'>
        <h3 class='admin__label'>Description</h3>
        <%- include( '../components/textarea', { name: 'product_content', cols: '50', rows: '30', placeholder: '', value: 'Something else', extraClasses: 'textarea--tall' } ) %>
      </div>
      <%- include( '../components/button', { id: '', type: 'submit', content: 'Save<i class="fas fa-save icon"></i>', extraClasses: '', extraLinkClasses: '' } ) %>
    </form>
  </article>
  <div id='images_popup' class="images__wrapper">
    <div class="images">
      <div class="images__cancel"><i class="fas fa-times"></i></div>
      <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill images__item', content: '<img class="image__button" src="/img/ss-01.jpg">' } ) %>
      <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill images__item', content: '<img class="image__button" src="/img/ss-02.jpg">' } ) %>
      <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill images__item', content: '<img class="image__button" src="/img/ss-03.jpg">' } ) %>
      <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill images__item', content: '<img class="image__button" src="/img/ss-04.jpg">' } ) %>
      <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill images__item', content: '<img class="image__button" src="/img/ss-05.jpg">' } ) %>
      <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill images__item', content: '<img class="image__button" src="/img/hero.jpg">' } ) %>
      <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill images__item', content: '<img class="image__button" src="/img/maua.png">' } ) %>
      <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill images__item', content: '<img class="image__button" src="/img/ss-06.jpg">' } ) %>
      <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill images__item', content: '<img class="image__button" src="/img/ss-07.jpg">' } ) %>
    </div>
  </div>
  <template>
    <div class='admin__item'>
      <%- include( '../components/link', { id: '', ref: '', extraClasses: 'link--nofill', content: '<img class="image__button">' } ) %>
    </div>
  </template>

  <%- include('partials/scripts', { scriptFilename: 'admin-product' } ) %>
</body>
</html>